<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.senzer.mylove.activity.MainActivity">

    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:image_scale_type="center_crop"
        app:indicator_drawable_selected="@drawable/shape_page_dots_sel"
        app:indicator_drawable_unselected="@drawable/shape_page_dots_nor"
        app:indicator_height="7dp"
        app:indicator_margin="5dp"
        app:indicator_width="7dp" />

</RelativeLayout>
